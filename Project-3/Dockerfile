FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
WORKDIR /app
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src
COPY ["PaymentTransactionValidator/PaymentTransactionValidator.csproj", "PaymentTransactionValidator/"]
RUN dotnet restore "PaymentTransactionValidator/PaymentTransactionValidator.csproj"
COPY . .
WORKDIR "/src/PaymentTransactionValidator"
RUN dotnet build "PaymentTransactionValidator.csproj" -c Release -o /app/build
FROM build AS publish
RUN dotnet publish "PaymentTransactionValidator.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "PaymentTransactionValidator.dll"]